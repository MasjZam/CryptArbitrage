<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_grey"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="15dip"
    android:orientation="horizontal"
    tools:context="com.example.alexander.cryptarbitrage2.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dip"
            android:text="@string/main_title"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dip"
            android:text="@string/home_page"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <Button
            android:id="@+id/view_current_opprotunities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dip"
            android:layout_marginHorizontal="30dip"
            android:background="@color/lime_green"
            android:text="@string/view_current_opprotunities"
            android:textSize="20sp" />

        <Button
            android:id="@+id/modify_exchanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dip"
            android:layout_marginHorizontal="30dip"
            android:background="@color/lime_green"
            android:text="@string/modify_exchanges"
            android:textSize="20sp" />

        <Button
            android:id="@+id/modify_cryptocurrencies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dip"
            android:background="@color/lime_green"
            android:text="@string/modify_cryptocurrencies"
            android:textSize="20sp" />

            <TextView
                android:paddingTop="35dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/minimumGainsHappyWith"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/minGainEditText"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="@string/minGainNumber"
                android:textSize="16sp" />

            <Button
                android:id="@+id/enterMinGainsButton"
                android:layout_width="75dip"
                android:layout_height="30dip"
                android:background="@color/light_sea_green"
                android:text="@string/enterButtonHomePageMinGains" />
        </LinearLayout>

        <Button
            android:layout_marginTop="30dip"
            android:id="@+id/typeOfArbitrage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_sea_green"
            android:text="@string/typeOfOpprotunities" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/refreshDataButtonHomePage"
            android:text="@string/refreshDataButton"
            android:background="@color/light_sea_green"
            />
    </LinearLayout>
</LinearLayout>