<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_grey"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="15dip"
    android:orientation="horizontal"
    tools:context="My.Awesome.Project.cryptarbitrage30.HomePage">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dip"
            android:text="@string/modify_exchanges"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_all_exchanges"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="50dip"/>

                    <Button
                        android:id="@+id/select_all_exchanges_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/off"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangeBinance"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="90dip"/>

                    <ToggleButton
                        android:id="@+id/exchange1_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangeBitZ"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="121dip"/>

                    <ToggleButton
                        android:id="@+id/exchange11_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangeBitfinex"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="95dip"/>

                    <ToggleButton
                        android:id="@+id/exchange4_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangeBitStamp"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="76dip"/>

                    <ToggleButton
                        android:id="@+id/exchange10_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangeBittrex"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="105dip"/>

                    <ToggleButton
                        android:id="@+id/exchange3_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangeGDAX"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="111dip"/>

                    <ToggleButton
                        android:id="@+id/exchange9_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangeHitBTC"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="99dip"/>

                    <ToggleButton
                        android:id="@+id/exchange8_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangeHuobi"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="111dip"/>

                    <ToggleButton
                        android:id="@+id/huobiExchangeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangeKraken"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="101dip"/>

                    <ToggleButton
                        android:id="@+id/exchange15_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangeOKEX"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="113dip"/>

                    <ToggleButton
                        android:id="@+id/exchange5_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exchangePoloniex"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:paddingRight="83dip"/>

                    <ToggleButton
                        android:id="@+id/exchange7_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/submit_exchange_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dip"
                        android:layout_marginRight="100dip"
                        android:background="@color/light_sea_green"
                        android:text="@string/sumbit"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>